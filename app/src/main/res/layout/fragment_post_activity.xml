<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".data.api.fragment.PostActivity">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/hello_blank_fragment" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_10ssp">

        <TextView
            android:id="@+id/txtToken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_70sdp"
            android:text="Welcome user"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold|italic"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_70sdp"
            android:text="Welcome user"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold|italic"
            android:visibility="visible" />

        <EditText
            android:id="@+id/editJudul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_40ssp"
            android:background="#363F60"
            android:backgroundTint="#363F60"
            android:ems="10"
            android:hint="Judul"
            android:inputType="text"
            android:padding="15dp"
            android:textColor="#FFFFFF"

            android:textColorHint="#6E7381" />

        <EditText
            android:id="@+id/editdeskripsi"
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:layout_marginTop="@dimen/_10ssp"
            android:background="#363F60"
            android:backgroundTint="#363F60"
            android:ems="10"
            android:hint="Deskripsi"
            android:inputType="text"
            android:padding="@dimen/_3sdp"
            android:paddingTop="20dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#6E7381" />

        <ImageView
            android:id="@+id/imgpp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/_40ssp"
            android:padding="@dimen/_3sdp"
            app:srcCompat="@drawable/baseline_add_photo_alternate_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_2ssp"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/imgCam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_lock" />


            <ImageButton
                android:id="@+id/imgUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:src="@drawable/ic_lock" />
        </LinearLayout>

        <Button
            android:id="@+id/btnSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10ssp"
            android:text="Button" />

    </LinearLayout>

</FrameLayout>